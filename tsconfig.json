{
  "compilerOptions": {
    "target": "esnext", // Use "esnext" for modern JavaScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext", // Ensure modern module support
    "moduleResolution": "node", // Standard Node.js module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Use the new JSX transform for React 17+
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "components/home/PublicPlans.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
